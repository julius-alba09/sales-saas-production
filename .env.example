# Database Configuration
DATABASE_URL=postgresql://postgres:password123@localhost:5432/sales_saas_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sales_saas_dev
DB_USER=postgres
DB_PASSWORD=password123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-change-this

# API Configuration
API_PORT=3001
API_BASE_URL=http://localhost:3001/api/v1

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@sales-saas.com
FROM_NAME=Sales SaaS

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000  # 24 hours

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-verifying-signatures

# Third-party Integrations
# NOTION_API_TOKEN=your-notion-api-token
# NOTION_DATABASE_ID=your-notion-database-id

# Monitoring & Analytics (optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_AUDIT_LOGGING=true